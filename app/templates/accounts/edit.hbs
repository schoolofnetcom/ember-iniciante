<div class="modal-wrapper">
  <div class="modal">
    <h1>Editando conta bancária</h1>
    <form {{ action "save" model on="submit" }}>
      <div class="input-container">
        {{ input value=model.title placeholder="Título..." }}
      </div>
      <div class="input-container">
        {{ input value=model.agency placeholder="Agência..." }}
      </div>
      <div class="input-container">
        {{ input value=model.account_number placeholder="Número da conta..." }}
      </div>
      <div class="input-container">
        {{ input value=model.balance_initial placeholder="Valor inicial..." }}
      </div>
      <div class="input-container">
        {{ input value=model.bank_id placeholder="Banco..." }}
      </div>
      <input type="submit" value="salvar" class="btn">
      {{#link-to "accounts.view" model.id class="btn"}}
        voltar
      {{/link-to}}
    </form>
  </div>
</div>